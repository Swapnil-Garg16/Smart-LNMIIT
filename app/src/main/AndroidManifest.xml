<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.elpoisterio.smartlnmiit">

    <application
        android:name="com.orm.SugarApp"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.Login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.Home"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data android:name="DATABASE" android:value="smart_lnmiit_db.db"/>
        <meta-data android:name="VERSION" android:value="1"/>
        <meta-data android:name="QUERY_LOG" android:value="true"/>
        <meta-data android:name="DOMAIN_PACKAGE_NAME" android:value="io.elpoisterio.smartlnmiit.models"/>
        <activity
            android:name=".activity.CancelClass"
            android:label="@string/title_activity_cancel_class"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.UploadGrades"
            android:label="@string/title_activity_upload_grades"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.Applications"
            android:label="@string/title_activity_application"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
