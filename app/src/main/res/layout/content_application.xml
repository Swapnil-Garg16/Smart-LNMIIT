<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_cancel_class"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"

    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="io.elpoisterio.smartlnmiit.activity.Applications"
    tools:showIn="@layout/activity_application">



    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:id="@+id/android_material_design_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type of Complaint"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textColorHint="#000000"
        app:met_floatingLabel="normal" />


    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_description"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:textColorHint="@color/nero">

        <EditText
            android:id="@+id/input_description"
            style="@style/MyEditText"
            android:layout_centerHorizontal="true"
            android:focusable="true"
            android:gravity="top|left"
            android:hint="Description"
            android:inputType="textMultiLine"


            />
    </android.support.design.widget.TextInputLayout>


    <Button
        android:id="@+id/send_approval"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_selector"
        android:elevation="8dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:shadowRadius="18"
        android:text="SEND FOR APPROVAL"
        android:textColor="@color/white_text"
        android:textSize="@dimen/font_size_14sp" />


</LinearLayout>
